<div class="page-header">
  <h2>Network Monitoring</h2>
  <div class="time-range-selector">
    <button class="btn btn-small" onclick="setTimeRange('1h')">1h</button>
    <button class="btn btn-small" onclick="setTimeRange('6h')">6h</button>
    <button class="btn btn-small active" onclick="setTimeRange('24h')">24h</button>
    <button class="btn btn-small" onclick="setTimeRange('7d')">7d</button>
  </div>
</div>

<div class="grid-2">
  <div class="section">
    <h3>Network Health</h3>
    <div class="health-metrics">
      <div class="metric">
        <span class="label">Average Signal Strength</span>
        <span class="value signal-<%= avgSignal > 80 ? 'excellent' : avgSignal > 60 ? 'good' : avgSignal > 40 ? 'fair' : 'poor' %>">
          <%= avgSignal %>%
        </span>
      </div>
      <div class="metric">
        <span class="label">Average Battery Level</span>
        <span class="value battery-<%= avgBattery > 50 ? 'good' : 'low' %>">
          <%= avgBattery %>%
        </span>
      </div>
      <div class="metric">
        <span class="label">Network Uptime</span>
        <span class="value">99.7%</span>
      </div>
      <div class="metric">
        <span class="label">Total Messages (24h)</span>
        <span class="value"><%= messageCount || 0 %></span>
      </div>
    </div>
  </div>

  <div class="section">
    <h3>Node Status Distribution</h3>
    <canvas id="nodeStatusChart" class="chart"></canvas>
  </div>
</div>

<div class="grid-2">
  <div class="section">
    <h3>Signal Strength History</h3>
    <canvas id="signalChart" class="chart" style="height: 250px;"></canvas>
  </div>

  <div class="section">
    <h3>Battery Level Trends</h3>
    <canvas id="batteryChart" class="chart" style="height: 250px;"></canvas>
  </div>
</div>

<div class="section">
  <h3>Top Problematic Nodes</h3>
  <% if (problematicNodes && problematicNodes.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Node</th>
          <th>Issue Type</th>
          <th>Severity</th>
          <th>Last Updated</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% problematicNodes.forEach(node => { %>
          <tr>
            <td><strong><%= node.nodeName %></strong></td>
            <td>
              <% 
                const issues = [];
                if (node.battery < 20) issues.push('Low Battery');
                if (node.signal < 30) issues.push('Weak Signal');
                if (!node.isActive) issues.push('Offline');
              %>
              <%= issues.join(', ') %>
            </td>
            <td>
              <% 
                let severity = 'info';
                if (node.battery < 10 || node.signal < 15) severity = 'danger';
                else if (node.battery < 20 || node.signal < 30) severity = 'warning';
              %>
              <span class="badge badge-<%= severity %>">
                <%= severity.toUpperCase() %>
              </span>
            </td>
            <td><small><%= new Date(node.updatedAt).toLocaleTimeString() %></small></td>
            <td>
              <button class="btn btn-small btn-info" onclick="inspectNode('<%= node.nodeId %>')">Inspect</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <div class="empty-state">
      <p>All nodes operating normally</p>
    </div>
  <% } %>
</div>

<div class="section">
  <h3>Message Activity Log</h3>
  <div id="messageLog" class="activity-log">
    <!-- Populated by Socket.io -->
  </div>
</div>

<style scoped>
