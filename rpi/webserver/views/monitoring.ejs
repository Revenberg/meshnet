  background: var(--color-primary);
  color: white;
}

.grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .grid-2 {
    grid-template-columns: 1fr;
  }
}

.health-metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.metric {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--color-bg-secondary);
  border-radius: 4px;
  text-align: center;
}

.metric .label {
  font-size: 0.9rem;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.metric .value {
  font-size: 1.8rem;
  font-weight: bold;
}

.signal-excellent { color: #10b981; }
.signal-good { color: #3b82f6; }
.signal-fair { color: #f59e0b; }
.signal-poor { color: #ef4444; }

.battery-good { color: #10b981; }
.battery-low { color: #ef4444; }

.chart {
  width: 100%;
  max-height: 300px;
}

.activity-log {
  max-height: 400px;
  overflow-y: auto;
  border: 1px solid var(--color-border);
  border-radius: 4px;
  padding: 1rem;
}

.log-entry {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0;
  border-bottom: 1px solid var(--color-border);
  font-size: 0.9rem;
}

.log-entry:last-child {
  border-bottom: none;
}

.badge {
  display: inline-block;
  padding: 0.25rem 0.5rem;
  border-radius: 3px;
  font-size: 0.8rem;
  font-weight: bold;
}

.badge-danger {
  background: #fee2e2;
  color: #991b1b;
}

.badge-warning {
  background: #fef3c7;
  color: #92400e;
}

.badge-info {
  background: #dbeafe;
  color: #1e3a8a;
}
</style>

<script>
let currentTimeRange = '24h';

function setTimeRange(range) {
  currentTimeRange = range;
  document.querySelectorAll('.time-range-selector .btn').forEach(btn => {
    btn.classList.remove('active');
  });
  event.target.classList.add('active');
  
  console.log('ðŸ“Š Loading data for ' + range);
  // Backend integration in Phase 4
}

function inspectNode(nodeId) {
  // Redirect to node details
  window.location.href = '/nodes?nodeId=' + nodeId;
}

// Socket.io listener for message log
socket.on('message-sent', (data) => {
  const logEntry = document.createElement('div');
  logEntry.className = 'log-entry';
  logEntry.innerHTML = `
    <span>${new Date().toLocaleTimeString()}</span>
    <span>${data.nodeId || 'System'}</span>
    <span>${data.messageType || 'unknown'}</span>
  `;
  
  const messageLog = document.getElementById('messageLog');
  messageLog.insertBefore(logEntry, messageLog.firstChild);
  
  // Keep only last 50 entries
  while (messageLog.children.length > 50) {
    messageLog.removeChild(messageLog.lastChild);
  }
});
</script>
