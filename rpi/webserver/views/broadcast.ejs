<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send Broadcast Message - MeshNet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="light-theme">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">üåê MeshNet Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/nodes">Nodes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users">Users</a></li>
                    <li class="nav-item"><a class="nav-link" href="/groups">Groups</a></li>
                    <li class="nav-item"><a class="nav-link" href="/pages">Pages</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/broadcast">üì§ Broadcast</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            üë§ <%= user ? user.username : 'User' %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4">üì§ Send Broadcast Message</h1>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div id="successAlert" class="alert alert-success alert-dismissible fade show d-none" role="alert">
                    <strong>‚úì Success!</strong> <span id="successMessage"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form id="broadcastForm" onsubmit="sendBroadcast(event)">
                            <!-- Title -->
                            <div class="mb-3">
                                <label for="title" class="form-label">Message Title</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                    placeholder="e.g., System Alert, Network Status, Device Update" required>
                                <small class="text-muted">Short, descriptive title for the message</small>
                            </div>

                            <!-- Content -->
                            <div class="mb-3">
                                <label for="content" class="form-label">Message Content</label>
                                <textarea class="form-control" id="content" name="content" rows="6"
                                    placeholder="Enter your message content here..." required></textarea>
                                <small class="text-muted">This text will be displayed on all device screens</small>
                            </div>

                            <!-- Image URL (Optional) -->
                            <div class="mb-3">
                                <label for="imageUrl" class="form-label">Image URL (Optional)</label>
                                <input type="url" class="form-control" id="imageUrl" name="imageUrl"
                                    placeholder="https://example.com/image.png">
                                <small class="text-muted">Leave blank for text-only messages</small>
                            </div>

                            <!-- Target Device (Optional) -->
                            <div class="mb-3">
                                <label for="nodeId" class="form-label">Target Device</label>
                                <select class="form-select" id="nodeId" name="nodeId">
                                    <option value="">üîä All Devices (Broadcast)</option>
                                    <% if (nodes && nodes.length > 0) { %>
                                        <% nodes.forEach(node => { %>
                                            <option value="<%= node.nodeId %>">
                                                üéØ <%= node.functionalName || 'Device' %> 
                                                (<%= node.nodeId.substring(0, 12) %>...)
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <small class="text-muted">Leave empty to send to all connected devices</small>
                            </div>

                            <!-- Refresh Interval -->
                            <div class="mb-3">
                                <label for="refreshInterval" class="form-label">Display Duration (seconds)</label>
                                <input type="number" class="form-control" id="refreshInterval" name="refreshInterval"
                                    value="30" min="5" max="600" step="5">
                                <small class="text-muted">How long the message stays on device screens (5-600 seconds)</small>
                            </div>

                            <!-- Active Status -->
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                                    <label class="form-check-label" for="isActive">
                                        Activate immediately
                                    </label>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-grid gap-2 d-sm-flex gap-sm-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    üì§ Send Broadcast
                                </button>
                                <button type="reset" class="btn btn-secondary btn-lg">
                                    Clear Form
                                </button>
                                <a href="/pages" class="btn btn-outline-secondary btn-lg">
                                    ‚Üê Manage Pages
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Recent Messages -->
                <div class="mt-5">
                    <h3>Recent Messages</h3>
                    <% if (pages && pages.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Content Preview</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pages.slice(0, 10).forEach(page => { %>
                                        <tr>
                                            <td><strong><%= page.title %></strong></td>
                                            <td>
                                                <small><%= page.content ? page.content.substring(0, 50) + (page.content.length > 50 ? '...' : '') : 'N/A' %></small>
                                            </td>
                                            <td>
                                                <span class="badge <%= page.isActive ? 'bg-success' : 'bg-secondary' %>">
                                                    <%= page.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </td>
                                            <td>
                                                <small><%= page.created ? new Date(page.created).toLocaleDateString() : 'N/A' %></small>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteMessage('<%= page.pageId %>')">
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            No messages sent yet. Send your first broadcast message above!
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        async function sendBroadcast(event) {
            event.preventDefault();

            const title = document.getElementById('title').value;
            const content = document.getElementById('content').value;
            const imageUrl = document.getElementById('imageUrl').value || null;
            const nodeId = document.getElementById('nodeId').value || null;
            const refreshInterval = parseInt(document.getElementById('refreshInterval').value);
            const isActive = document.getElementById('isActive').checked;

            const payload = {
                title,
                content,
                imageUrl,
                nodeId,
                refreshInterval,
                isActive
            };

            // Remove null values to let API handle defaults
            Object.keys(payload).forEach(key => 
                payload[key] === null && delete payload[key]
            );

            try {
                const response = await axios.post('/api/broadcast', payload);
                
                // Show success message
                const successDiv = document.getElementById('successAlert');
                const target = nodeId ? 'specific device' : 'all devices';
                document.getElementById('successMessage').textContent = 
                    `"${title}" sent to ${target}. Page ID: ${response.data.pageId.substring(0, 8)}...`;
                successDiv.classList.remove('d-none');

                // Reset form
                document.getElementById('broadcastForm').reset();

                // Auto-hide success message after 5 seconds
                setTimeout(() => {
                    successDiv.classList.add('d-none');
                }, 5000);

                // Reload page after 2 seconds to show new message in recent list
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } catch (error) {
                console.error('Error sending broadcast:', error);
            }
        }

        async function deleteMessage(pageId) {
            if (!confirm('Delete this message?')) return;

            try {
                await axios.delete(`/api/pages/${pageId}`);
                location.reload();
            } catch (error) {
                console.error('Error deleting message:', error);
            }
        }
    </script>

    <style>
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border: 1px solid #ddd;
            border-radius: 0.375rem;
        }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        textarea.form-control {
            font-family: 'Courier New', monospace;
            font-size: 0.95rem;
        }

        .btn-lg {
            padding: 0.75rem 2rem;
            font-size: 1rem;
        }

        .table th {
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #0d6efd;
        }

        .badge {
            padding: 0.375rem 0.75rem;
            font-size: 0.85rem;
        }

        h1 {
            color: #333;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        h3 {
            color: #333;
            font-weight: 600;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }

        small.text-muted {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.85rem;
            color: #666 !important;
        }
    </style>
</body>
</html>
